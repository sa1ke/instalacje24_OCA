<odoo>
    <record id="view_instalacje24_service_template_tree" model="ir.ui.view">
        <field name="name">instalacje24.service.template.tree</field>
        <field name="model">instalacje24.service.template</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name"/>
                <field name="fixed_price"/>
                <field name="default_hours"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <record id="view_instalacje24_service_template_form" model="ir.ui.view">
        <field name="name">instalacje24.service.template.form</field>
        <field name="model">instalacje24.service.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="fixed_price"/>
                        <field name="default_hours"/>
                        <field name="active"/>
                    </group>
                    <field name="material_line_ids">
                        <tree editable="bottom">
                            <field name="product_id"/>
                            <field name="quantity"/>
                        </tree>
                    </field>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_instalacje24_service_template" model="ir.actions.act_window">
        <field name="name">Szablony us≈Çug</field>
        <field name="res_model">instalacje24.service.template</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
